{
    "manifest_version": 3,
    "name": "Yad2 Address Info",
    "version": "1.0",
    "description": "Automatically displays additional address information on Yad2 rental listings",
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://www.yad2.co.il/realestate/*"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ],
    "permissions": [],
    "host_permissions": [
      "http://localhost:5001/*"
    ]
  }